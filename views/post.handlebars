<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>{{title}}</h2>
    <p>Created by
      {{user_name}}
      on
      {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{content}}
    </p>
  </div>

  <div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a Comment:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-input" id="content" name="content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  {{#if comments.length}}
    <div class="col-md-6">
      <h3>Comments:</h3>

      {{#each comments as |comment|}}
        <div class="row mb-4">
          <div class="col-md-5">
            <h2>Created by{{comment.user_name}}</h2>
            <div class="col-md-7">
              <p>
                {{comment.content}}
              </p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>